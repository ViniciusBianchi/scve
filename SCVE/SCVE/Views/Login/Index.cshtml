
@{
    ViewBag.Title = "Login";
}

<div class="box-parent-login">
    <div class="well bg-white box-login">
        <h2 class="ls-login-logo">Sistema para Candidatos a Vaga de Estágio</h2>
        <form role="form">
            <fieldset>

                <div class="form-group ls-login-user">
                    <label for="userLogin">E-mail de usuário</label>
                    <input class="form-control ls-login-bg-user input-lg" id="userLogin" type="text" aria-label="Usuário" placeholder="Digite seu e-mail">
                </div>

                <div class="form-group ls-login-password">
                    <label for="userPassword">Senha</label>
                    <input class="form-control ls-login-bg-password input-lg" id="userPassword" type="password" aria-label="Senha" placeholder="Digite sua senha">
                </div>

                <a href="#" class="ls-login-forgot">Lembrar Senha</a>

                <input type="submit" value="Entrar" class="btn btn-primary btn-lg btn-block">
                <p>
                    <br/>

                    Deseja cadastrar seu currículo? Clique no link abaixo!
                    <br/><a href="#">Cadastrar Currículo</a>
                </p>

            </fieldset>
        </form>
    </div>
</div>
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jquery")